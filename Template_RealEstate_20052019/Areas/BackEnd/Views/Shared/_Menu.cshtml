                <a href="/">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Utility", new { Area="Backend"})">
                    <i class="fa fa-thumbs-up" aria-hidden="true"></i> <span>Tiện ích</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Article", new { Area="Backend"})">
