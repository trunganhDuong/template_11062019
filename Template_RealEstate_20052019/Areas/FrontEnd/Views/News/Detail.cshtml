@using Template_RealEstate_20052019.Models
@model Template_RealEstate_20052019.Models.Article
@{
    Layout = "_LayoutNews";
}

@if (Model != null)
{
    <div class="blog-page area-padding section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <article class="blog-post-wrapper">
                                <div class="post-thumbnail">
                                    <img src="~/upload/@Model.Avatar" alt="">
                                </div>
                                <div class="post-information">
                                    <h2>@Model.ArticleTitle</h2>
                                    <div class="entry-meta">
                                        <span class="author-meta"><i class="fa fa-user"></i> <a href="#">admin</a></span>
                                        <span><i class="fa fa-clock-o"></i>@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm:ss")</span>
                                    </div>
                                    <div class="entry-content">
                                        @Html.Raw(Model.Content)
                                    </div>
                                </div>
                            </article>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    @await Component.InvokeAsync("RecentPost")
                </div>

            </div>
        </div>
    </div>
}

@await Component.InvokeAsync("Registration")
